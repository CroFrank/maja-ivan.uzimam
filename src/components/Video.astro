---
export interface Props {
  src: string
  controls?: boolean
  autoplay?: boolean
  loop?: boolean
  muted?: boolean
}

const {
  src,
  controls = true,
  autoplay = false,
  loop = false,
  muted = false,
} = Astro.props
---

<div class="video-container">
  <video
    class="video"
    src={`/videos/${src}`}
    {controls ? 'controls' : ''}
    {autoplay ? 'autoplay' : ''}
    {loop ? 'loop' : ''}
    {muted ? 'muted' : ''}
  >
    Your browser does not support the video tag.
  </video>
</div>

<style>
  .video {
    max-height: 800px;
    width: 600px;
    border-radius: 25px;
    margin-left: auto;
    margin-right: auto;
  }
  .video-container {
    display: flex; /* Enables flexbox */
    justify-content: center; /* Centers content horizontally */
    align-items: center; /* Centers content vertically */
    background-color: #f8f9fa; /* Optional: Add a background color */
  }
</style>
